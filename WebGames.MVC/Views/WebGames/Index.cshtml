@model IEnumerable<WebGames.Application.Game.GameDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-12">All Games</h1>

<p>
    @if (Model.ElementAt(0).IsEditable)
    {
        <a asp-action="Create" class="btn btn-primary">Add a new Game!</a>
    }
</p>

<div class="row">
@foreach (var item in Model) {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <a class="btn btn-primary asp-controller="WebGames" asp-action="Play" asp-route-encodedName="@item.EncodedName">Play</a>
                @if (item.IsEditable)
                {
                    <a class="btn btn-secondary asp-controller="WebGames" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a>
                }
            </div>
        </div>
}
</div>

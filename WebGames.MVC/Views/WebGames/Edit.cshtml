@model WebGames.Application.Game.Commands.EditGame.EditGameCommand

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/WebGames/Edit.css" />

<h1>Edit @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="ImageSource" class="control-label"></label>
                <input asp-for="ImageSource" class="form-control" />
                <span asp-validation-for="ImageSource" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div class="bg-body-secondary rounded p-3 shadow-lg">
    <h4>Genres:</h4>
    
    <div class="btn-group dropend">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Add Genre
        </button>
        <ul class="dropdown-menu animate fadeIn" id="genres-dropdown" data-encoded-name="@Model.EncodedName">
            <button class="btn btn-primary" type="button" disabled>
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span class="visually-hidden">Loading...</span>
            </button>
        </ul>
    </div>

    <div id="genres" class="row" data-encoded-name="@Model.EncodedName">
        <div class="spinner-border m-5" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <a asp-action="Index" class="btn btn-primary m-3" style="width: 18rem;">Back to List</a>
    <a asp-action="Delete" class="btn btn-danger m-3" asp-route-encodedName="@Model.EncodedName" style="width: 18rem;">Delete</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/WebGames/Edit.js"></script>
}

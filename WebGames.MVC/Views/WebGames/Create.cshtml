@using WebGames.Application.Game.Commands.CreateGame
@model CreateGameCommand

<h1>Add a new game</h1>

<hr/>

<div class="row">
	<div class="col-md-4">
		<form action="/WebGames/Create" method="post" enctype="multipart/form-data">
			<div class="form-group mb-3">
				<label class="control-label" asp-for="Name">Name</label>
				<input class="form-control" type="text" asp-for="Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label class="control-label" asp-for="Description">Description</label>
				<textarea asp-for="Description" class="form-control" rows="3"> </textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label class="control-label" asp-for="Source">Source</label>
				<input class="form-control" type="text" asp-for="Source" />
				<span asp-validation-for="Source" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label class="control-label" asp-for="ImageSource">Image Source</label>
				<input class="form-control" type="text" asp-for="ImageSource" />
				<span asp-validation-for="ImageSource" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label class="control-label" asp-for="Image">Upload Image (Recommended Size: 300x200px)</label>
				<br />
				<input class="form-control" type="file" asp-for="Image" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<input type="submit" value="Create" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}